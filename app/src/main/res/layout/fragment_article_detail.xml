<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/text_margin"
    tools:context=".ui.fragments.views.ArticleDetailFragment">

    <TextView
        android:id="@+id/tvTitleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/text_dark_grey"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAbstractDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/text_dark_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvSourceDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/text_dark_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPublishDateDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginTop="@dimen/text_margin"
        android:drawableLeft="@drawable/ic_perm_contact_calendar_black_24dp"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/text_dark_grey"
        android:textSize="16sp" />

</LinearLayout>